<Window x:Class="csharpTechnicalTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csharpTechnicalTest"
        xmlns:ViewModel="clr-namespace:csharpTechnicalTest.ViewModel"
        xmlns:Command="clr-namespace:csharpTechnicalTest.Command"
        mc:Ignorable="d"
        Title="csharpTechnicalTest"
        Height="331" Width="321"
        Background="Black"
        ResizeMode="NoResize">

    <!-- 使用する ViewModel 定義 -->
    <Window.DataContext>
        <ViewModel:MainWindowViewModel />
    </Window.DataContext>
    <!-- 共通レイアウト定義 -->
    <Window.Resources>
        <Style TargetType="WrapPanel" x:Key="InputPanel">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Style.Resources>
                <Style TargetType="Button">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="Width" Value="40" />
                    <Setter Property="Height" Value="30" />
                    <Setter Property="Margin" Value="5" />
                    <Setter Property="Background" Value="Black" />
                    <Setter Property="BorderBrush" Value="White" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontSize" Value="14" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid Width="300" Height="300">
        <!-- 入力数値表示エリア -->
        <TextBox x:Name="textboxOutput" IsReadOnly="True" Text="{Binding OutputValue}" FontSize="14" Margin="0 50 0 0" Padding="0 4 0 0" Width="250" Height="30" TextAlignment="Right" VerticalAlignment="Top" BorderThickness="1" BorderBrush="White" Background="Black" Foreground="White" />
        <!-- メモリ機能ボタンエリア -->
        <WrapPanel Margin="20 90 0 0" Width="150" Height="40" Orientation="Horizontal" Style="{StaticResource InputPanel}">
            <Button Content="M+" Command="{Binding MemoryCommand}" CommandParameter="M+" />
            <Button Content="M-" Command="{Binding MemoryCommand}" CommandParameter="M-" />
            <Button Content="MRC" Command="{Binding MemoryCommand}" CommandParameter="MRC" />
        </WrapPanel>
        <!-- 数値入力ボタン表示エリア -->
        <WrapPanel Margin="20 130 0 0" Width="150" Height="160" Orientation="Horizontal" Style="{StaticResource InputPanel}">
            <Button x:Name="button7" Content="7" Command="{Binding NumberCommand}" CommandParameter="7" />
            <Button x:Name="button8" Content="8" Command="{Binding NumberCommand}" CommandParameter="8" />
            <Button x:Name="button9" Content="9" Command="{Binding NumberCommand}" CommandParameter="9" />
            <Button x:Name="button4" Content="4" Command="{Binding NumberCommand}" CommandParameter="4" />
            <Button x:Name="button5" Content="5" Command="{Binding NumberCommand}" CommandParameter="5" />
            <Button x:Name="button6" Content="6" Command="{Binding NumberCommand}" CommandParameter="6" />
            <Button x:Name="button1" Content="1" Command="{Binding NumberCommand}" CommandParameter="1" />
            <Button x:Name="button2" Content="2" Command="{Binding NumberCommand}" CommandParameter="2" />
            <Button x:Name="button3" Content="3" Command="{Binding NumberCommand}" CommandParameter="3" />
            <Button x:Name="button0" Content="0" Command="{Binding NumberCommand}" CommandParameter="0" />
            <Button Content="00" Command="{Binding NumberCommand}" CommandParameter="00" />
            <Button x:Name="buttonPoint" Content="." Command="{Binding NumberCommand}" CommandParameter="." />
        </WrapPanel>
        <!-- 入力値クリアボタン表示エリア -->
        <WrapPanel Margin="170 130 0 0" Width="110" Height="40" Orientation="Horizontal" Style="{StaticResource InputPanel}">
            <Button x:Name="buttonClear" Content="C" Command="{Binding ClearCommand}" CommandParameter="C" />
            <Button Content="AC" Command="{Binding ClearCommand}" CommandParameter="AC" Margin="15 0 0 0" />
        </WrapPanel>
        <!-- 四則演算子入力ボタン表示エリア -->
        <WrapPanel Margin="170 170 0 0" Width="110" Height="120" Orientation="Vertical" Style="{StaticResource InputPanel}">
            <Button x:Name="buttonMulti" Content="Ｘ" Command="{Binding CalcCommand}" CommandParameter="Ｘ" />
            <Button x:Name="buttonAdd" Content="＋" Command="{Binding CalcCommand}" CommandParameter="＋" Height="70" />
            <Button x:Name="buttonDiv" Content="÷" Command="{Binding CalcCommand}" CommandParameter="÷" Margin="15 5 0 0" />
            <Button x:Name="buttonSub" Content="－" Command="{Binding CalcCommand}" CommandParameter="－" Margin="15 10 0 0" />
            <Button x:Name="buttonEqual" Content="＝" Command="{Binding CalcCommand}" CommandParameter="＝" Margin="15 10 0 0" />
        </WrapPanel>
    </Grid>
</Window>
